<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Geri"
        android:clickable="true"
        android:focusable="true"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_email"
        android:autofillHints="emailAddress"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        android:autofillHints="name"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_surname"
        android:autofillHints="nameFamily"
        android:inputType="textPersonName"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil simgenizi seÃ§in:"
        android:textStyle="bold"
        android:layout_marginTop="24dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/avatarSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_pink"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_pink"
                android:padding="8dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/avatar_green"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_green"
                android:padding="8dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/avatar_blue"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_blue"
                android:padding="8dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/avatar_yellow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_yellow"
                android:padding="8dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/avatar_purple"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_purple"
                android:padding="8dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/avatar_red"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_red"
                android:padding="8dp"
                android:clickable="true" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"/>


</LinearLayout>
