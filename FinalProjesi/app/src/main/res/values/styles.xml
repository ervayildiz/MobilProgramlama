<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/jungle_green_dark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/jungle_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Chip.Category" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/jungle_green</item>
        <item name="cornerRadius">16dp</item>
        <item name="chipStrokeColor">@color/jungle_green</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Text Styles -->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/jungle_green</item>
    </style>

    <!-- CardView Style -->
    <style name="CardView.Recipe" parent="CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">8dp</item>
    </style>
</resources>