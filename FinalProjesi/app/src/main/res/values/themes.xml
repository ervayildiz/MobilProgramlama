<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tarif" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jungle_green</item>
        <item name="colorPrimaryDark">@color/jungle_green_dark</item>
        <item name="colorPrimaryVariant">@color/jungle_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_pink</item>
        <item name="colorSecondaryVariant">@color/soft_pink_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Component styles -->
        <item name="chipStyle">@style/Widget.Tarif.Chip</item>
        <item name="buttonStyle">@style/Widget.Tarif.Button</item>
        <item name="textInputStyle">@style/Widget.Tarif.TextInputLayout</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Chip style -->
    <style name="Widget.Tarif.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/jungle_green</item>
        <item name="android:textColor">@color/jungle_green</item>
    </style>

    <!-- Button style -->
    <style name="Widget.Tarif.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/jungle_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="Widget.Tarif.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/jungle_green</item>
        <item name="hintTextColor">@color/jungle_green</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
    </style>
</resources>